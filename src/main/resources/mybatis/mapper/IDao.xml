<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tech.prjm09.dao.IDao">

	<sql id="includeCount">
		<choose>
			<when test="param2==1">
				WHERE (BTITLE LIKE '%'||#{param1}||'%')
			</when>
			<when test="param2==2">
				WHERE (BCONTENT LIKE '%'||#{param1}||'%')
			</when>
			<when test="param2==3">
				WHERE (BTITLE LIKE '%'||#{param1}||'%'
				OR 
				BCONTENT LIKE '%'||#{param1}||'%')
			</when>
			<otherwise></otherwise>
		</choose>
	</sql>
	
	<sql id="includeList">
		<choose>
			<when test="param4==1">
				WHERE (BTITLE LIKE '%'||#{param3}||'%')
			</when>
			<when test="param4==2">
				WHERE (BCONTENT LIKE '%'||#{param3}||'%')
			</when>
			<when test="param4==3">
				WHERE (BTITLE LIKE '%'||#{param3}||'%'
				OR 
				BCONTENT LIKE '%'||#{param3}||'%')
			</when>
			<otherwise></otherwise>
		</choose>
	</sql>

	<select id="list" resultType="com.tech.prjm09.dto.BDto">
		<!-- SELECT BID,BNAME,BTITLE,BCONTENT, 
		BDATE,BHIT,BGROUP,BSTEP,BINDENT 
		FROM REPLYBOARD 
		ORDER BY BGROUP DESC, BSTEP ASC -->
		
		<!-- SELECT * FROM 
		(SELECT ROWNUM NUM, N.* FROM (SELECT * FROM REPLYBOARD ORDER BY BGROUP DESC, BSTEP ASC) N)
		WHERE NUM BETWEEN #{param1} AND #{param2} -->
		
		SELECT * FROM 
		(SELECT ROWNUM NUM, N.* FROM (SELECT * FROM REPLYBOARD ORDER BY BGROUP DESC, BSTEP ASC) N
		<include refid="includeList"/>)
		WHERE NUM BETWEEN #{param1} AND #{param2}
	</select>
	
	<select id="selectBoardCount" resultType="Integer">
		SELECT COUNT(*) FROM REPLYBOARD
		<include refid="includeCount"/>
	</select>
	
	<!-- write(String bname, String btitle, String bcontent) -->
	<insert id="write">
		INSERT INTO REPLYBOARD(BID,BNAME,BTITLE, 
		BCONTENT,BDATE,BHIT,BGROUP,BSTEP,BINDENT) 
		VALUES(REPLYBOARD_SEQ.NEXTVAL,#{param1},#{param2}, 
		#{param3},SYSDATE,0,REPLYBOARD_SEQ.CURRVAL,0,0)
	</insert>
	
	<select id="contentView" resultType="com.tech.prjm09.dto.BDto">
		SELECT BID,BNAME,BTITLE,BCONTENT, 
		BDATE,BHIT,BGROUP,BSTEP,BINDENT 
		FROM REPLYBOARD WHERE BID = #{param1}
	</select>
	
	<select id="modifyView" ><!-- 사실 resultType을 적지 않아도 된다. -->
		SELECT BID,BNAME,BTITLE,BCONTENT, 
		BDATE,BHIT,BGROUP,BSTEP,BINDENT  
		FROM REPLYBOARD WHERE BID = #{param1}
	</select>
	
	<!-- modify(String bid, String bname, String btitle, String bcontent) -->
	<update id="modify">
		UPDATE REPLYBOARD SET BNAME = #{param2}, BTITLE = #{param3}, BCONTENT = #{param4} WHERE BID = #{param1}
	</update>
	
	<select id="replyView">
		SELECT BID,BNAME,BTITLE,BCONTENT,BDATE,BHIT,BGROUP,BSTEP,BINDENT FROM REPLYBOARD WHERE BID = #{param1}
	</select>
	
	<!-- reply(String bid, String bname, String btitle, String bcontent, String bindent, String bgroup, String bstep) -->
	<insert id="reply">
		INSERT INTO REPLYBOARD(BID,BNAME,BTITLE, BCONTENT,BGROUP,BSTEP,BINDENT) 
		VALUES(REPLYBOARD_SEQ.NEXTVAL,#{param2},#{param3},#{param4},#{param6},#{param7}+1,#{param5}+1)
	</insert>
	
	<update id="replyShape">
		UPDATE REPLYBOARD SET BSTEP=BSTEP+1 WHERE BGROUP=#{param1} AND BSTEP>#{param1}
	</update>
	
	<delete id="delete">
		DELETE FROM REPLYBOARD WHERE BID=#{PARAM1}
	</delete>
	
	<select id="check_indent" resultType="map">
		SELECT
			(SELECT BINDENT FROM REPLYBOARD WHERE BID = #{param1}) AS OWN_INDENT,
			(SELECT BSTEP FROM REPLYBOARD WHERE BID = #{param1}) AS OWN_STEP,
			(SELECT MAX(BINDENT) FROM REPLYBOARD WHERE BGROUP = #{param2} AND BSTEP = BINDENT) AS MAX_SAME,
			MAX(BINDENT) AS MAX_INDENT
		FROM REPLYBOARD
		WHERE BGROUP = #{param2}
		GROUP BY BGROUP
	</select>
	
	<select id="selectBid">
		SELECT MAX(BID) FROM REPLYBOARD
	</select>
	
	<insert id="imgwrite">
		INSERT INTO REBRDIMGTB VALUES(REBRDIMGTB_SEQ.NEXTVAL, #{param1}, #{param2}, #{param3})
	</insert>
	
	<select id="selectImg" resultType="com.tech.prjm09.dto.ReBrdImgDto">
		SELECT REBNO, BID, REBORGFILE, REBCHGFILE FROM REBRDIMGTB WHERE BID=#{param1}
	</select>
</mapper>